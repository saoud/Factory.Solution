@{
  Layout = "_Layout";
}
@using Factory.Models;
<header>
  <h1>Machines</h1>
</header>
<main>
  @if (@Model.Count == 0)
  {
    <h3>There are no machines yet.</h3>
  }
  <ul>
    @foreach (Machine m in Model)
    {
      <li>@Html.ActionLink($"{m.Name}", "Details", new{id = m.MachineId})</li>
    }
  </ul>
  <p>@Html.ActionLink("Add a machine", "Create")</p>
  <p>@Html.ActionLink("Go back to home", "Index", "Home")</p>
</main>